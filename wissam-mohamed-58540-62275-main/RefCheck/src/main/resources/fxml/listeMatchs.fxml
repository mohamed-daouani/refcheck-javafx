<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.ListeMatchsController"
      spacing="30"
      style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);"
      alignment="CENTER"
      prefWidth="1280"
      prefHeight="900">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <VBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="logoutButton" text="DÉCONNEXION" 
                    style="-fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand;"
                    onAction="#handleLogout"/>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox alignment="CENTER_RIGHT" spacing="5">
                <Text text="Bonjour" style="-fx-font-size: 16px; -fx-fill: #666;"/>
                <Text fx:id="refereeName" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #B39B63;"/>
            </VBox>
            <ImageView fx:id="refereePhoto" fitHeight="68" fitWidth="100" preserveRatio="true" 
                      style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>
        </HBox>
    </VBox>

    <Label text="Mes Matchs" 
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #B39B63; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2);"/>

    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
        <VBox fx:id="matchsContainer" spacing="15" style="-fx-padding: 10;">
            <VBox styleClass="match-card"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-padding: 20;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <spacing>15</spacing>
                <HBox alignment="CENTER">
                    <Label text="Match n°" style="-fx-text-fill: #333; -fx-font-size: 16px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>
                    <Label fx:id="matchId" style="-fx-text-fill: #B39B63; -fx-font-size: 16px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.2), 2, 0, 0, 1);"/>
                </HBox>

                <HBox alignment="CENTER">
                    <Label fx:id="dateMatch" style="-fx-text-fill: #666; -fx-font-size: 16px;"/>
                    <Label fx:id="lieuMatch" style="-fx-text-fill: #666; -fx-font-size: 16px;"/>
                </HBox>

                <HBox spacing="40" alignment="CENTER">
                    <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                        <ImageView fx:id="equipe1Logo" fitHeight="80" fitWidth="80" preserveRatio="true" 
                                  style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 3);"/>
                        <Label fx:id="equipe1Nom" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);" 
                               wrapText="true" textAlignment="CENTER"/>
                    </VBox>

                    <Label text="VS" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #B39B63; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 5, 0, 0, 2);"/>

                    <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                        <ImageView fx:id="equipe2Logo" fitHeight="80" fitWidth="80" preserveRatio="true" 
                                  style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 3);"/>
                        <Label fx:id="equipe2Nom" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);" 
                               wrapText="true" textAlignment="CENTER"/>
                    </VBox>
                </HBox>

                <Button text="VOIR LE MATCH"
                        style="-fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 15 30; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.4), 10, 0, 0, 3); -fx-cursor: hand;"
                        maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>
