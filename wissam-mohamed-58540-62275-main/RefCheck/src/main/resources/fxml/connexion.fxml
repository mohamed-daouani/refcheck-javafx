<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>

<VBox alignment="CENTER" spacing="30" 
      style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);" 
      xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="view.ConnexionController"
      prefWidth="400" prefHeight="600">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <ImageView fitHeight="169.0" fitWidth="83.0" preserveRatio="true"
               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
        <image>
            <Image url="@../images/logos/rbfa_logo.png" />
        </image>
    </ImageView>

    <Text style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #B39B63; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2);">CONNEXION</Text>

    <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <TextField fx:id="usernameField" promptText="Nom d'utilisateur" 
                  style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E5E5E5; -fx-border-width: 1; -fx-border-radius: 8;" />

        <PasswordField fx:id="passwordField" promptText="Mot de passe" 
                      style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #E5E5E5; -fx-border-width: 1; -fx-border-radius: 8;" />

        <Button fx:id="loginButton" text="SE CONNECTER"
                style="-fx-background-color: #B39B63; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand;" />
    </VBox>
</VBox>
