<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.CarteMatchController"
      styleClass="match-card"
      style="-fx-background-color: #f8f8f8; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
      spacing="10"
      prefWidth="600">
      
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox alignment="CENTER">
        <Label text="Match nÂ°" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>
        <Label fx:id="matchId" style="-fx-text-fill: #B39B63; -fx-font-size: 16px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.2), 2, 0, 0, 1);"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label fx:id="dateMatch" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>
        <Label fx:id="lieuMatch" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>
    </HBox>

    <HBox spacing="50" alignment="CENTER">
        <VBox alignment="CENTER" prefWidth="250" maxWidth="Infinity" spacing="10">
            <ImageView fx:id="equipe1Logo" fitHeight="60" fitWidth="60" preserveRatio="true"/>
            <Label fx:id="equipe1Nom"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;"
                   wrapText="true"
                   textAlignment="CENTER"/>
        </VBox>

        <StackPane prefWidth="100" alignment="CENTER">
            <Label text="vs."
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: black;" />
        </StackPane>

        <VBox alignment="CENTER" prefWidth="250" maxWidth="Infinity" spacing="10">
            <ImageView fx:id="equipe2Logo" fitHeight="60" fitWidth="60" preserveRatio="true"/>
            <Label fx:id="equipe2Nom"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;"
                   wrapText="true"
                   textAlignment="CENTER"/>
        </VBox>
    </HBox>


    <Button text="VOIR LE MATCH"
            onAction="#handleVoirMatch"
            style="-fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 14px;"
            maxWidth="Infinity"/>
</VBox>
