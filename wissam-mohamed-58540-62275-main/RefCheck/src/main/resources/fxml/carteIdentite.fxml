<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="1200" style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="view.CarteIdentiteController">

    <left>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;" text="Import" />
            <Button fx:id="importButton" style="-fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand;" text="IMPORTER DES IMAGES" />
            <VBox fx:id="thumbnailContainer" spacing="10" />
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #B39B63; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2);" text="Carte d'identité" />
            <StackPane>
                <ImageView fx:id="imageView" fitHeight="400" fitWidth="600" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" />
                <Canvas fx:id="cropCanvas" height="400" width="600" />
            </StackPane>
            <Button fx:id="cropButton" disable="true" style="-fx-background-color: #B39B63; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200; -fx-padding: 12 24; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand;" text="ROGNER" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="backButton" minWidth="113.0" style="-fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand; -fx-pref-width: 100;" text="RETOUR" />
                <ProgressIndicator fx:id="loadingIndicator" style="-fx-progress-color: #B39B63; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-padding: 10;" visible="false" />
                <Button fx:id="finishButton" minWidth="113.0" prefHeight="42.0" prefWidth="113.0" style="-fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand; -fx-pref-width: 100;" text="TERMINER" />
            </HBox>
        </VBox>
    </center>

    <right>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;" text="Images rognées :" />
            <VBox fx:id="croppedImagesContainer" spacing="10" />
        </VBox>
    </right>
</BorderPane>
