<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.TableauBordController"
      style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef); -fx-font-family: 'Segoe UI';" prefWidth="1200" prefHeight="700">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Résultats de la vérification" 
           style="-fx-font-family: 'Segoe UI'; -fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #B39B63; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2);"/>
    
    <HBox spacing="20" alignment="CENTER">
        <!-- Équipe 1 -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-font-family: 'Segoe UI';">
            <Label text="Équipe 1" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>
            <TableView fx:id="equipe1Table" prefWidth="500" prefHeight="300"
                      style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-font-family: 'Segoe UI';">
                <columns>
                    <TableColumn fx:id="nomCol1" text="Nom" prefWidth="100"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <TableColumn fx:id="prenomCol1" text="Prénom" prefWidth="100"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <TableColumn fx:id="numRegistreCol1" text="N° Registre" prefWidth="100"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <TableColumn fx:id="statutCol1" text="Statut" prefWidth="80"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;">
                        <cellValueFactory>
                            <PropertyValueFactory property="statut"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="raisonCol1" text="Raison" prefWidth="120"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;">
                        <cellValueFactory>
                            <PropertyValueFactory property="raison"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Button text="Rescan Équipe 1" onAction="#rescanEquipe1"
                    style="-fx-font-family: 'Segoe UI'; -fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand;"/>
        </VBox>

        <!-- Équipe 2 -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-font-family: 'Segoe UI';">
            <Label text="Équipe 2" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>
            <TableView fx:id="equipe2Table" prefWidth="500" prefHeight="300"
                      style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-font-family: 'Segoe UI';">
                <columns>
                    <TableColumn fx:id="nomCol2" text="Nom" prefWidth="100"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;">
                        <cellValueFactory>
                            <PropertyValueFactory property="nom"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="prenomCol2" text="Prénom" prefWidth="100"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;">
                        <cellValueFactory>
                            <PropertyValueFactory property="prenom"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="numRegistreCol2" text="N° Registre" prefWidth="100"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;">
                        <cellValueFactory>
                            <PropertyValueFactory property="numRegistre"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="statutCol2" text="Statut" prefWidth="80"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;">
                        <cellValueFactory>
                            <PropertyValueFactory property="statut"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="raisonCol2" text="Raison" prefWidth="120"
                                style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;">
                        <cellValueFactory>
                            <PropertyValueFactory property="raison"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Button text="Rescan Équipe 2" onAction="#rescanEquipe2"
                    style="-fx-font-family: 'Segoe UI'; -fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand;"/>
        </VBox>
    </HBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Retour à l'accueil" onAction="#retourAccueil"
                style="-fx-font-family: 'Segoe UI'; -fx-background-color: #B39B63; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(179,155,99,0.3), 10, 0, 0, 2); -fx-cursor: hand;"/>
    </HBox>
</VBox> 